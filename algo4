//Tri par SÃ©lection
#include<stdio.h>
#include<string.h>


int main(){
    int n;
   int T[]={6,5,7,4,3,8,1,2};
   n = sizeof(T)/sizeof(T[0]);
   for( int i=0;i<n;i++){
   int min_i=i;
   for(int j=i+1;j<n-1;j++){

    if(T[j]<T[min_i])
    min_i=j;
   }
int temp=T[i];
T[i]=T[min_i];
T[min_i]=temp;
   }
for(int i=0;i<n;i++){
    printf("%d _",T[i]);
}
	return 0;
}
